<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        バイク編集
      </h1>
    </div>
  </div>
</section>

<% if @bike.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@bike.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @bike.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @bike do |f| %>
          <div class="field">
            <%= f.label :name, "バイク名", class: "label" %>
            <%= f.text_field :name, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :description, "説明", class: "label" %>
            <%= f.text_area :description, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :category, "カテゴリー", class: "label" %>
            <%= f.text_field :category, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :cc, "排気量 [CC]", class: "label" %>
            <%= f.number_field :cc, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :top_photo, "トップ画像", class: "label" %>
            <%= f.file_field :top_photo , class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
